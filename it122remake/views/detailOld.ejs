<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= product.name%></title>
  </head>
  <body>
      <% if(product){ %>
      <div class="card">
        <p class="name"><%= product.name%></p>
        <p class="type"><%= product.type%></p>
        <p class="brand"><%= product.brand%></p>
        <p class="price"><%= product.price%></p>
        <p class="volume"><%= product.volume%></p>
        <ul class="skinConcerns cardContent-list">
            <% product.skinConcerns.forEach(function(item){%>
            <li class="skinConcern"><%= item%></li>
            <% });%>
        </ul>
        <ul class="skinTypes cardContent-list">
            <% product.skinTypes.forEach(function(item){%>
            <li class="skinType"><%= item%></li>
            <% });%>
        </ul>
        <a href="/">Go back</a>
      </div>
        <% }%>
    </ul>
  </body>
</html>
